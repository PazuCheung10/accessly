{
  "name": "accessly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:server": "tsx server/index.ts",
    "build": "next build",
    "start": "tsx server/index.ts",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "check:core": "node scripts/assert-single-core.mjs",
    "check:client-imports": "node scripts/assert-no-server-imports-in-client.mjs",
    "check:ssg": "node scripts/assert-ssg-safe.mjs",
    "prisma:gen": "prisma generate --schema=src/prisma/schema.prisma",
    "prebuild": "pnpm prisma:gen && pnpm check:core && pnpm check:client-imports && pnpm check:ssg",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/data/seed.ts",
    "db:seed-demo": "tsx src/data/seed-demo.ts",
    "db:seed-solacedesk": "tsx src/data/seed-solacedesk.ts",
    "db:check": "tsx src/data/check-memberships.ts",
    "db:diagnose": "tsx src/data/diagnose-chat.ts",
    "demo": "pnpm prisma migrate deploy --schema=src/prisma/schema.prisma && pnpm prisma:gen && pnpm db:seed-demo && pnpm start"
  },
  "dependencies": {
    "@auth/core": "0.41.1",
    "@auth/prisma-adapter": "2.11.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/puppeteer": "^7.0.4",
    "bcryptjs": "^3.0.3",
    "date-fns": "^3.0.0",
    "ioredis": "^5.3.2",
    "next": "^15.0.0",
    "next-auth": "5.0.0-beta.30",
    "puppeteer": "^24.29.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.3.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.9.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5",
    "vite": "5.4.21",
    "vitest": "^1.3.1"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.41.1"
    }
  }
}
