datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- NextAuth core (via adapter) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (bcrypt hashed)
  role          Role      @default(USER) // app-specific role
  accounts      Account[]
  sessions      Session[]
  messages      Message[]
  memberships   RoomMember[]
  createdRooms  Room[]    @relation("RoomCreator")
  auditLogs     AuditLog[] @relation("AuditLogs")
  ban           UserBan?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// --- App tables ---
model Room {
  id          String        @id @default(cuid())
  name        String        @unique
  title       String        // Required display title
  description String?       // Optional description
  isPrivate   Boolean       @default(false)
  type        RoomType      @default(PUBLIC)
  status      TicketStatus? // For TICKET rooms: OPEN, WAITING, RESOLVED
  tags        String[]      // Array of tags
  creatorId   String?       // FK to User who created the room
  creator     User?         @relation("RoomCreator", fields: [creatorId], references: [id], onDelete: SetNull)
  messages    Message[]
  members     RoomMember[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  @@index([type, status])
}

model RoomMember {
  id      String @id @default(cuid())
  userId  String
  roomId  String
  role    RoomRole @default(MEMBER)
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  room    Room  @relation(fields: [roomId], references: [id], onDelete: Cascade)
  @@unique([userId, roomId])
  // For DM rooms: ensure exactly two members and prevent duplicate DM pairs
  @@index([roomId])
}

model Message {
  id             String    @id @default(cuid())
  roomId         String
  userId         String
  content        String
  parentMessageId String?  // For threading: reference to parent message
  parentMessage  Message? @relation("MessageThread", fields: [parentMessageId], references: [id], onDelete: Cascade)
  replies        Message[] @relation("MessageThread")
  createdAt      DateTime  @default(now())
  editedAt       DateTime? // Timestamp when message was edited
  deletedAt      DateTime? // Timestamp when message was deleted (soft delete)
  reactions      Json?     // Map of emoji -> array of user IDs who reacted: { "üëç": ["userId1", "userId2"], "‚ù§Ô∏è": ["userId3"] }
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  room           Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  @@index([roomId, createdAt(sort: Desc)])
  @@index([parentMessageId])
}

enum Role {
  USER
  ADMIN
}

enum RoomRole {
  MEMBER
  MODERATOR
  OWNER
}

enum RoomType {
  PUBLIC
  PRIVATE
  DM
  TICKET
}

enum TicketStatus {
  OPEN
  WAITING
  RESOLVED
}

// Audit log for admin/moderation actions
model AuditLog {
  id        String   @id @default(cuid())
  action    String   // e.g., "user.ban", "room.delete", "member.remove"
  actorId   String   // User who performed the action
  actor     User     @relation("AuditLogs", fields: [actorId], references: [id], onDelete: Cascade)
  targetType String? // "user", "room", "member", etc.
  targetId   String? // ID of the target (userId, roomId, etc.)
  metadata   Json?    // Additional context (reason, old values, etc.)
  createdAt  DateTime @default(now())
  
  @@index([actorId])
  @@index([targetType, targetId])
  @@index([createdAt(sort: Desc)])
}

// User bans (soft delete via flag)
model UserBan {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reason    String?
  bannedBy  String   // Admin user ID
  bannedAt  DateTime @default(now())
  expiresAt DateTime? // Optional expiration
}