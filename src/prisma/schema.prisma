datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- NextAuth core (via adapter) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (bcrypt hashed)
  role          Role      @default(USER) // app-specific role
  accounts      Account[]
  sessions      Session[]
  messages      Message[]
  memberships   RoomMember[]
  createdRooms  Room[]    @relation("RoomCreator")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// --- App tables ---
model Room {
  id          String        @id @default(cuid())
  name        String        @unique
  title       String        // Required display title
  description String?       // Optional description
  isPrivate   Boolean       @default(false)
  type        RoomType      @default(PUBLIC)
  tags        String[]      // Array of tags
  creatorId   String?       // FK to User who created the room
  creator     User?         @relation("RoomCreator", fields: [creatorId], references: [id], onDelete: SetNull)
  messages    Message[]
  members     RoomMember[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model RoomMember {
  id      String @id @default(cuid())
  userId  String
  roomId  String
  role    RoomRole @default(MEMBER)
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  room    Room  @relation(fields: [roomId], references: [id], onDelete: Cascade)
  @@unique([userId, roomId])
  // For DM rooms: ensure exactly two members and prevent duplicate DM pairs
  @@index([roomId])
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  @@index([roomId, createdAt(sort: Desc)])
}

enum Role {
  USER
  ADMIN
}

enum RoomRole {
  MEMBER
  MODERATOR
  OWNER
}

enum RoomType {
  PUBLIC
  PRIVATE
  DM
}